{
    "name": "amber/container",
    "description": "Simple PHP DI Container.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Deivi PeÃ±a",
            "email": "systemson@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Amber\\Container\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1.0",
        "psr/container": "^1.0",
        "amber/common": "dev-master",
        "amber/cache": "dev-master"
    },
    "require-dev": {
        "lavoiesl/php-benchmark": "^1.4",
        "php-coveralls/php-coveralls": "^2.1",
        "phpdocumentor/phpdocumentor": "dev-master",
        "phpunit/phpunit": "^6.5|^7.0",
        "squizlabs/php_codesniffer": "^3.3",
        "symfony/thanks": "^1.1"
    },
    "scripts": {
        "test": "phpunit",
        "docs": "phpdoc",
        "sniff": "phpcs --standard=PSR12 ./src",
        "fix-cs": "phpcbf --standard=PSR12 ./src",
        "speed": "php ./tests/Benchmark.php"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 0
    }
}
